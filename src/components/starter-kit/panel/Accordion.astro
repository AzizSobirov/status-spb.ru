---
interface Props {
  title: string;
  icon?: string;
}

const { title } = Astro.props;
---

<div class="accordion">
  <div class="accordion__header">
    <div class="accordion__header-title">{title}</div>
    <div class="accordion__header-icon">
      <svg
        width="8"
        height="24"
        viewBox="0 0 8 24"
        fill="none"
        xmlns="http://www.w3.org/2000/svg"
      >
        <path
          d="M3.64645 23.6036C3.84171 23.7988 4.15829 23.7988 4.35355 23.6036L7.53553 20.4216C7.7308 20.2263 7.7308 19.9097 7.53553 19.7145C7.34027 19.5192 7.02369 19.5192 6.82843 19.7145L4 22.5429L1.17157 19.7145C0.976311 19.5192 0.659728 19.5192 0.464466 19.7145C0.269204 19.9097 0.269204 20.2263 0.464466 20.4216L3.64645 23.6036ZM4.5 23.25V0.75H3.5V23.25H4.5Z"
          fill="white"></path>
      </svg>
    </div>
  </div>
  <div class="accordion__body">
    <div class="accordion__content">
      <slot />
    </div>
    <slot name="footer" />
  </div>
</div>
