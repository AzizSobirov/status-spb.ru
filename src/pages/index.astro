---
import App from "../layouts/App.astro";
import {
  TheIntro,
  TheWelcome,
  TheGallery,
  TheVip,
  TheContacts,
} from "components";
---

<App title="Бильярдный Клуб">
  <Fragment slot="header">
    <style is:inline>
      .header {
        padding: 50px 0;
      }

      .header .container {
        align-items: flex-start;
      }

      .header__logo {
        display: none;
      }

      .header .menu {
        margin-left: 0;
        flex-direction: column;
        align-items: flex-start;
      }
    </style>
  </Fragment>
  <main>
    <!-- Intro -->
    <TheIntro />
    <!-- TheWelcome -->
    <TheWelcome />
    <!-- TheGallery -->
    <TheGallery />
    <!-- TheVip -->
    <TheVip />
    <!-- TheContacts -->
    <TheContacts />
  </main>
</App>
